<body>
  <img onclick="location.href = '../menu/index.html';" class="menuicon" height="100px" width="100px" src="../ruby.png" alt="">
  <div id='settings' ontouchstart>
  <input checked class='nav' name='nav' type='radio'>
  <span class='nav'>Log In</span>
  <input class='nav' name='nav' type='radio'>
  <span class='nav'>Sign Up</span>
  <main class='content'>
    <section id='profile'>
      <form action="/auth/login" method="POST">
        <br><br><br><br><br><br>
        <ul>
          <li>
            <fieldset class='material'>
              <div>
                <input required type='text' name="username">
                <label>Username/Email/Phone Number</label>
                <hr>
              </div>
            </fieldset>
          </li>
          <li>
            <fieldset class='material'>
              <div>
                <input required type='password' name="password">
                <label>Password</label>
                <hr>
              </div>
            </fieldset>
          </li>
          <br><br><br><br><br><br>
          <li class='large padding'>
            <fieldset class='material-button center'>
              <div>
                <input class='save' type='submit' value='Save'>
              </div>
            </fieldset>
          </li>
        </ul>
      </form>
    </section>
    <section id='account'>
      <form action="/auth/signup" method="POST">
        <ul>
          <li>
            <fieldset class='material'>
              <div>
                <input required type='text' value='email@domain.com' name='email'>
                <label>Email</label>
                <hr>
              </div>
            </fieldset>
          </li>
          <li>
            <fieldset class='material'>
              <div>
                <input required type='text' name='username'>
                <label>Username</label>
                <hr>
              </div>
            </fieldset>
          </li>
          <li>
            <fieldset class='material'>
                <div>
                <input type='text' name='phone'>
                <label>Phone Number</label>
                <hr>
                </div>
            </fieldset>
            </li>
          <li>
            <fieldset class='material'>
              <div>
                <input required type='password' name='password'>
                <label>Password</label>
                <hr>
              </div>
            </fieldset>
          </li>
          <li style="text-align: center;" class='padding'>
            <fieldset class='material-button'>
              <div>
                <a class="linkedinBtn smGlobalBtn" href="#" ></a>
              </div>
            </fieldset>
          </li>
          <li style="text-align: center;" class='padding'>
            <fieldset class='material-button'>
              <div>
                <a class="githubBtn smGlobalBtn" href="#" ></a>
              </div>
            </fieldset>
          </li>
          <li style="text-align: center;" class='padding'>
            <fieldset class='material-button'>
              <div>
                <a class="facebookBtn smGlobalBtn" href="/auth/facebook" ></a>
              </div>
            </fieldset>
          </li>
          <li style="text-align: center;" class='padding'>
            <fieldset class='material-button'>
              <div>
                <a class="googleplusBtn smGlobalBtn" href="#" ></a>
              </div>
            </fieldset>
          </li>
          <li class='large padding'>
            <fieldset class='material-button center'>
              <div>
                <input class='save' type='submit' value='Save'>
              </div>
            </fieldset>
          </li>
        </ul>
      </form>
    </section>
    <section class='upcoming' id='privacy'>
      <h1>Coming&nbsp;soon!</h1>
    </section>
    <section class='upcoming' id='advanced'>
